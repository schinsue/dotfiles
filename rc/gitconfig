[core]
	excludesfile = /Users/sergiochin-sue/.dotfiles/config/global_gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
  co = checkout
  st = status
  ci = commit
  up = pull --ff-only
  br = branch
  df = diff
  lg = log -p
  aa = add --all
  unstage = reset HEAD
  new = ls-files --others --exclude-standard
  added = diff --cached --name-only
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  plre = pull --rebase
  ff = merge --ff-only
  newauthor = commit --amend --reset-author -C HEAD
  poes = push
  l = "!source ~/.dotfiles/script/githelpers && pretty_git_log"
  la = !git l --all
  hp = "!source ~/.dotfiles/script/githelpers && show_git_head"
  wtf = "!git commit -m \"$(curl -s whatthecommit.com/index.txt)\""
  scoreboard = "!git log | grep '^Author' | sort | uniq -ci | sort -r"
  ready = rebase -i @{u}
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[color]
  ui = true
  diff = auto
  status = auto
  branch = auto
[help]
  autocorrect = 1
[diff]
  renames = copies
[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[push]
  default = upstream
[branch]
  autosetuprebase = always
[http]
	postBuffer = 100m
[url "git://github.com/"]
  # Read-only
  insteadOf = gh:
[url "git@github.com:"]
  # With write access
  insteadOf = wgh:
[url "git@heroku.com:"]
  insteadOf = heroku:
[credential]
  helper = osxkeychain
[user]
	email = s.chinsue@gmail.com
	name = Sergio Chin-Sue
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
